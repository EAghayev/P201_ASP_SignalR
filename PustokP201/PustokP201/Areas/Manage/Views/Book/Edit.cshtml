@model Book
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1>Edit Book</h1>
        </div>
        <div class="col-lg-8 mx-auto">
            <form method="post" asp-action="edit" enctype="multipart/form-data">
                <div class="form-row">
                    <div class="form-group col-md-8">
                        <label asp-for="Name">Name</label>
                        <input class="form-control" asp-for="Name" placeholder="Enter Name">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="TagIds">Tags</label>
                        <select class="form-control" asp-for="TagIds" asp-items="@new SelectList((List<Tag>)ViewBag.Tags,nameof(Tag.Id),nameof(Tag.Name))">
                        </select>
                        <span class="text-danger" asp-validation-for="TagIds"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="AuthorId">Author</label>
                        <select class="form-control" asp-for="AuthorId" asp-items="@new SelectList((List<Author>)ViewBag.Authors,nameof(Author.Id),nameof(Author.FullName))">
                        </select>
                        <span class="text-danger" asp-validation-for="AuthorId"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="GenreId">Example select</label>
                        <select class="form-control" asp-for="GenreId" asp-items="@new SelectList((List<Genre>)ViewBag.Genres,nameof(Genre.Id),nameof(Genre.Name))">
                        </select>
                        <span class="text-danger" asp-validation-for="GenreId"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label asp-for="Code">Code</label>
                        <input class="form-control" asp-for="Code" placeholder="Enter Code">
                        <span class="text-danger" asp-validation-for="Code"></span>
                    </div>
                    <div class="form-group col-md-3">
                        <label asp-for="CostPrice">CostPrice</label>
                        <input class="form-control" asp-for="CostPrice" placeholder="Enter CostPrice">
                        <span class="text-danger" asp-validation-for="CostPrice"></span>
                    </div>
                    <div class="form-group col-md-3">
                        <label asp-for="SalePrice">SalePrice</label>
                        <input class="form-control" asp-for="SalePrice" placeholder="Enter SalePrice">
                        <span class="text-danger" asp-validation-for="SalePrice"></span>
                    </div>
                    <div class="form-group col-md-3">
                        <label asp-for="DiscountPercent">DiscountPercent</label>
                        <input class="form-control" asp-for="DiscountPercent" placeholder="Enter Discount Percent">
                        <span class="text-danger" asp-validation-for="DiscountPercent"></span>
                    </div>
                </div>



                <div class="form-row">
                    <div class="form-check col-md-4 text-center">
                        <input class="form-check-input" asp-for="StockStatus">
                        <label class="form-check-label" asp-for="StockStatus">
                            Stock status
                        </label>
                        <span class="text-danger" asp-validation-for="StockStatus"></span>
                    </div>
                    <div class="form-check col-md-4 text-center">
                        <input class="form-check-input" asp-for="IsNew">
                        <label class="form-check-label" asp-for="IsNew">
                            IsNew
                        </label>
                        <span class="text-danger" asp-validation-for="IsNew"></span>
                    </div>
                    <div class="form-check col-md-4 text-center">
                        <input class="form-check-input" asp-for="IsFeatured">
                        <label class="form-check-label" asp-for="IsFeatured">
                            IsFeatured
                        </label>
                        <span class="text-danger" asp-validation-for="IsFeatured"></span>
                    </div>
                </div>



                <div class="form-group">
                    <label asp-for="Desc">Desc</label>
                    <textarea class="form-control" asp-for="Desc" placeholder="Enter desc"></textarea>
                    <span class="text-danger" asp-validation-for="Desc"></span>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="PosterFile">PosterFile</label>
                        <input class="form-control" asp-for="PosterFile">
                        <span class="text-danger" asp-validation-for="PosterFile"></span>
                        <div class="imb-box">
                            <img width="150"  src="~/uploads/books/@Model.BookImages.FirstOrDefault(x=>x.PosterStatus==true)?.Image"/>
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="HoverPosterFile">HoverPosterFile</label>
                        <input class="form-control" asp-for="HoverPosterFile">
                        <span class="text-danger" asp-validation-for="HoverPosterFile"></span>
                        <div class="imb-box">
                            <img width="150" src="~/uploads/books/@Model.BookImages.FirstOrDefault(x=>x.PosterStatus==false)?.Image" />
                        </div>
                    </div>
                    <div class="form-group col-md-12">
                        <label asp-for="ImageFiles">ImageFiles</label>
                        <input class="form-control" asp-for="ImageFiles">
                        <span class="text-danger" asp-validation-for="ImageFiles"></span>
                        @foreach (var item in Model.BookImages.Where(x => x.PosterStatus == null))
                        {
                            <div class="imb-box d-inline-block" >
                                <img width="150" src="~/uploads/books/@item.Image" />
                                <input type="hidden" name="BookImageIds" value="@item.Id"/>
                            </div>
                        }
                    </div>
                </div>


                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}


