@model Author
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1>Edit Author</h1>
        </div>
        <div class="col-lg-8 mx-auto">
            <form method="post" asp-action="edit">
                <div class="form-group">
                    <label asp-for="FullName">FullName</label>
                    <input class="form-control" asp-for="FullName" placeholder="Enter fullname">
                    <span class="text-danger" asp-validation-for="FullName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Country">Country</label>
                    <input class="form-control" asp-for="Country" placeholder="Enter country">
                    <span class="text-danger" asp-validation-for="Country"></span>

                </div>
                <div class="form-group">
                    <label asp-for="BornYear">Born year</label>
                    <input class="form-control" asp-for="BornYear" placeholder="Enter born year">
                    <span class="text-danger" asp-validation-for="BornYear"></span>

                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
