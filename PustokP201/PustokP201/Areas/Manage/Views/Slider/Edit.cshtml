@model Slider
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1>Edit a Slider</h1>
        </div>
        <div class="col-lg-8 mx-auto">
            <form method="post" asp-action="edit" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Order">Order</label>
                    <input class="form-control" asp-for="Order" placeholder="Enter Order">
                    <span class="text-danger" asp-validation-for="Order"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Title1">Title1</label>
                    <input class="form-control" asp-for="Title1" placeholder="Enter title1">
                    <span class="text-danger" asp-validation-for="Title1"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Title2">Title2</label>
                    <input class="form-control" asp-for="Title2" placeholder="Enter title2">
                    <span class="text-danger" asp-validation-for="Title2"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BtnText">BtnText</label>
                    <input class="form-control" asp-for="BtnText" placeholder="Enter btn text">
                    <span class="text-danger" asp-validation-for="BtnText"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RedirectUrl">RedirectUrl</label>
                    <input class="form-control" asp-for="RedirectUrl" placeholder="Enter url">
                    <span class="text-danger" asp-validation-for="RedirectUrl"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Desc">Desc</label>
                    <textarea class="form-control" asp-for="Desc" placeholder="Enter desc"></textarea>
                    <span class="text-danger" asp-validation-for="Desc"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageFile">ImageFile</label>
                    <input class="form-control" asp-for="ImageFile">
                    <span class="text-danger" asp-validation-for="ImageFile"></span>
                </div>
                <div class="img-box" style="width:30%;position:relative">
                    <input type="hidden" name="Image" value="@Model.Image" />
                    <img style="max-width:100%" src="~/uploads/sliders/@Model.Image" alt="Alternate Text" />
                    <i class="fas fa-times img-box-remove" style=" position: absolute; top: -8px; right: -6px; color: red; cursor: pointer; "></i>
                </div>


                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @Html.Partial("_ValidationScriptsPartial")

<script>
    $(function () {
        $(document).on("click", ".img-box-remove", function () {
            $(".img-box").remove()
        })
    })
</script>
}